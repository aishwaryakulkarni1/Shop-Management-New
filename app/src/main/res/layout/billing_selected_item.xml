<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_itemname"
            android:layout_width="0dp"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Item name"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mrp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content"
                android:text="MRP"
                />

            <TextView
                android:id="@+id/tv_shortcut"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content"
                android:text="MRP"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/q_minus"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/addItemForBilling" />

            <TextView
                android:layout_width="0dp"
                android:hint="0"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/txt_calValues"
                android:textColor="@color/color_grey"
                android:textSize="12sp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/subValuesForBilling"
                android:background="@drawable/q_plus"
                android:layout_height="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="match_parent"
            android:background="@color/mustardbrown"
            android:layout_height="1dp"/>
    </LinearLayout>



</LinearLayout>