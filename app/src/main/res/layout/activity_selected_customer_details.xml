<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/black">

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mustardbrown">
    </View>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
             android:orientation="vertical"
             android:layout_margin="16dp"
             android:background="@drawable/rectangleshape"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text=" Name:"
                     />



                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_margin="5dp"
                     android:id="@+id/txt_view_CustonerName"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/color_grey"
                     android:letterSpacing="0.05"
                     android:text=""
                     />


             </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="Mobile:"
                     />


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:id="@+id/txt_view_c_contact"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_margin="5dp"
                     android:textColor="@color/color_grey"
                     android:letterSpacing="0.05"
                     android:text=""
                     />

             </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_gravity="center"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="Email:"
                     />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_margin="5dp"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:id="@+id/txt_view_c_email"
                     android:textColor="@color/color_grey"
                     android:letterSpacing="0.05"
                     android:text=""
                     />

             </LinearLayout>




             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_gravity="center"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="@string/GST_IN"
                     />


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_margin="5dp"
                     android:id="@+id/txt_view_gst"
                     android:textColor="@color/color_grey"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_gravity="end"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="@string/placeOfSuppler"
                     />


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_gravity="center"
                     android:layout_margin="5dp"
                     android:id="@+id/txt_view_placeofsuppier"
                     android:textColor="@color/color_grey"/>


             </LinearLayout>





             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_margin="5dp"
                     android:layout_gravity="center"
                     android:gravity="end"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="@string/Homedelivery"
                     />


                 <TextView
                     android:id="@+id/txt_view_home_delivery"
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_margin="5dp"
                     android:textColor="@color/color_grey"
                     android:letterSpacing="0.05"
                     />

             </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_gravity="center"
                     android:gravity="end"
                     android:layout_margin="5dp"
                     android:textColor="@color/colorPrimary"
                     android:letterSpacing="0.05"
                     android:text="Address:"
                     />



                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="3"
                     android:layout_height="wrap_content"
                     android:textSize="12sp"
                     android:layout_margin="5dp"
                     android:id="@+id/txt_view_c_address"
                     android:textColor="@color/color_grey"/>



             </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_gravity="end"

                 android:layout_height="wrap_content">

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_margin="10dp"
                     android:id="@+id/v_call"
                     android:layout_weight="1"
                     android:src="@drawable/ic_phone"
                     android:layout_height="wrap_content" />

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_margin="10dp"
                     android:id="@+id/v_sms"
                     android:layout_weight="1"
                     android:src="@drawable/ic_action_sms"
                     android:layout_height="wrap_content" />

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_margin="10dp"
                     android:layout_weight="1"
                     android:id="@+id/v_mail"
                     android:src="@drawable/ic_action_mail"
                     android:layout_height="wrap_content" />



                 <android.support.v7.widget.AppCompatButton
                     android:layout_width="wrap_content"
                     android:text="Remove"
                     android:id="@+id/bt_removeCustomer"
                     android:textAllCaps="false"
                     android:textColor="@color/white"
                     android:backgroundTint="@color/colorPrimary"
                     android:layout_height="wrap_content" />



             </LinearLayout>



         </LinearLayout>

         </LinearLayout>





</LinearLayout>