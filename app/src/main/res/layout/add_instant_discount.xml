<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rectangleshape"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/color_grey"
             android:text="Add Instant Discount"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
             android:text="Item Name:"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/dis_itemName"
            android:text="@string/Item_Name"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Unit Price :"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/Unit_Price"
            android:id="@+id/dis_unitPrice"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Qty :"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/Item_Name"
            android:id="@+id/dis_qty"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/DiscountInRs"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Item_Name"
                android:id="@+id/dis_totalAmount"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Amount:"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/Item_Name"
            android:id="@+id/dis_totalAmount"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
         android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
         android:orientation="vertical"
        android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_gravity="bottom"
                   android:textColor="@color/green"
                   android:text="Add Discount :"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_width="wrap_content"
                   android:text="â‚¹"
                   android:layout_marginLeft="20dp"
                   android:layout_gravity="bottom"
                   android:textColor="@color/color_grey"
                   android:layout_height="wrap_content" />

               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:id="@+id/instant_discount"
                   android:textColor="@color/color_grey"
                   android:background="@drawable/bottomline"
                   android:layout_height="wrap_content" />

           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:text="@string/DiscountedPrice"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/dis_discountedPrice"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="cancel"
            android:id="@+id/dis_cancel"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="Add Discount"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:id="@+id/add_discount"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_height="40dp" />


    </LinearLayout>


</LinearLayout>