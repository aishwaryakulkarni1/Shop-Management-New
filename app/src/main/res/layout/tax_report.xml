<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <include layout="@layout/view_line">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Date"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:text="@string/Date"
                android:id="@+id/bill_curruntDate"
                android:textSize="16sp"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/date_billingDate"
                android:src="@drawable/ic_date_range"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>

        <include layout="@layout/view_line"></include>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rectangleshape"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Tax Report"
                android:layout_gravity="center"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <include layout="@layout/view_line"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Type"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/TaxableValue"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/TotalGST"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Total Amnt"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include layout="@layout/view_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Sale"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/sale_tax"
                        android:layout_weight="1"
                        android:text="@string/TotalGST"

                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/sale_gst"
                        android:layout_weight="1"
                        android:text="@string/TotalGST"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/sale_amount"
                        android:layout_weight="1"
                        android:text="@string/Total"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Purchase"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_tax"
                        android:layout_weight="1"
                        android:text="Taxable"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_totalgst"
                        android:layout_weight="1"
                        android:text="@string/TotalGST"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_totalAmount"
                        android:layout_weight="1"
                        android:text="@string/Total"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <include layout="@layout/view_line"></include>

            </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:textColor="@color/red"
                       android:layout_marginLeft="10dp"
                       android:text="@string/Quaility"
                       android:layout_height="wrap_content" />


                   <LinearLayout
                       android:layout_width="match_parent"
                        android:layout_margin="10dp"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:text="CGST"
                           android:textColor="@color/colorPrimaryDark"
                           android:textAlignment="center"
                           android:layout_height="wrap_content" />


                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:text="SGST"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:text="IGST"
                           android:textColor="@color/green"
                           android:textAlignment="center"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_margin="10dp"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="0dp"
                           android:id="@+id/sale_cgst"
                           android:layout_weight="1"
                           android:textColor="@color/colorPrimaryDark"
                           android:textAlignment="center"
                           android:layout_height="wrap_content" />


                       <TextView
                           android:layout_width="0dp"
                           android:id="@+id/sale_sgst"
                           android:layout_weight="1"
                           android:textColor="@color/white"
                           android:textAlignment="center"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:layout_width="0dp"
                           android:id="@+id/sale_igst"
                           android:layout_weight="1"
                           android:textAlignment="center"
                           android:textColor="@color/green"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <include layout="@layout/view_line"></include>


               </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/green"
                    android:layout_marginLeft="10dp"
                    android:text="@string/Input"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="CGST"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="SGST"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="IGST"
                        android:textColor="@color/green"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_cgst"
                        android:layout_weight="1"
                        android:text="CGST"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_sgst"
                        android:layout_weight="1"
                        android:text="SGST"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/pur_igst"
                        android:layout_weight="1"
                        android:text="IGST"
                        android:textColor="@color/green"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/view_line"></include>


        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Download Report"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/sale_download_product"
                    android:src="@drawable/download"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>