<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_item_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.inevitablesol.www.shopmanagement.ItemModule.History_itemDetails">

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/rectangleshape"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:text="CompanyName:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:text="Product Type:"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/ProductName"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/GST"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/HSN"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Specification"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />




                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/ItemPrice"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/StockStorage"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Mrp"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Unit_Price"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/TotalPrice"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/DiscountItem"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />







            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_itemName"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_cName"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_type"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_pame"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_gst"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_hsn"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_specification"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_itemPrice"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_stockStorage"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_mrp"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_unitPrice"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_totalPrice"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_grey"
                    android:id="@+id/h_discount"
                    android:text="@string/ItemName"
                    android:layout_height="wrap_content" />












            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>
