<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rectangleshape"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/color_grey"
            android:text="Add Quantity"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Item Name:"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Unit Price :"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/DiscountInRs"
                android:layout_height="wrap_content" />


            <TextView

                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/DiscountedPrice"
                android:layout_height="wrap_content" />


            <TextView

                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/FinalPrice"
                android:layout_height="wrap_content" />


            <TextView

                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/Unit"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/itemName"
                android:text="@string/Item_Name"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Unit_Price"
                android:id="@+id/unitPrice"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Unit_Price"
                android:id="@+id/dis_inRepees"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="@string/Unit_Price"
                android:id="@+id/discoutedPrice"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="@string/Unit_Price"
                android:id="@+id/finalprice"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:text="@string/MeasurementUnit"
                android:id="@+id/measurementUnit"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_line"></include>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/green"
        android:text="@string/AddMoreQty"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Quantity :"
            android:layout_height="wrap_content" />


        <android.support.design.widget.TextInputEditText
            android:layout_width="3dp"
            android:layout_weight="1"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            android:id="@+id/more_qty"
            android:hint="@string/Qty"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/ChangeUnit"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/sp_measurementUnit"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>




    </LinearLayout>

    <include layout="@layout/view_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/Price"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="21dp"
            android:id="@+id/txt_price"
            android:layout_marginLeft="20dp"
            android:textColor="@color/green"
            android:text="@string/Price"
            android:layout_height="wrap_content" />







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="cancel"
            android:id="@+id/dis_cancel"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="Add Qty"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:id="@+id/add_qty"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_height="40dp" />


    </LinearLayout>
    <include layout="@layout/view_line"></include>


</LinearLayout>

