                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/Descriptions"
                            android:textSize="16sp"
                            android:textColor="@color/color_grey"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14" />

                    </LinearLayout>



                    <!-- SPECIFICATION -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_specification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="textCapWords"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Unit Price :"
                            android:textSize="16sp"
                            android:textColor="@color/color_grey"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>




                    <!-- SPECIFICATION -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_unitPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="numberDecimal"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="M  Unit :"
                            android:gravity="end"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimary"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:layout_width="match_parent"
                                android:id="@+id/measurementUnit"
                                android:layout_height="wrap_content">

                            </Spinner>

                        </LinearLayout>


                    </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:gravity="bottom"
                     android:layout_gravity="bottom"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:textColor="@color/white"
                         android:text="Select Unit :"
                         android:gravity="bottom"
                         android:layout_marginRight="15dp"
                         android:layout_height="wrap_content" />


                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_weight="2.5"
                         android:layout_marginTop="10dp"
                         android:background="@color/colorPrimary"
                         android:layout_height="wrap_content">

                         <Spinner
                             android:layout_width="match_parent"
                             android:id="@+id/sub_measurementUnit"
                             android:layout_height="wrap_content">

                         </Spinner>

                     </LinearLayout>
                 </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:inputType="numberDecimal"
                            android:layout_gravity="center"
                            android:textColor="@color/color_grey"
                            android:letterSpacing="0.05"
                            android:text="Discount in % :"
                            />

                    </LinearLayout>




                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_discountper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="numberDecimal"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/color_grey"
                        android:letterSpacing="0.05"
                        android:text="Discount in Rs :"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_dicountinRs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="numberDecimal"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

             <View
                 android:layout_width="match_parent"
                 android:layout_marginTop="10dp"
                 android:background="@color/colorPrimary"
                 android:layout_height="1dp">

             </View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/DiscountedPrice"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content" />

                    <!-- SPECIFICATION -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_discountedPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="numberDecimal"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:textColor="@color/color_grey"
                            android:letterSpacing="0.05"
                            android:text="GST % :"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">


                        <Spinner
                            android:layout_width="match_parent"
                            android:id="@+id/et_gstpercentage"
                            android:overlapAnchor="true"
                            android:entries="@array/gst_tax_array"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </LinearLayout>

