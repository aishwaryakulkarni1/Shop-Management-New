    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="30dp">


            <LinearLayout
                android:id="@+id/ll_userinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangleshape"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Product type Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                   <LinearLayout
                       android:layout_width="1dp"
                       android:layout_weight="1"
                       android:background="@color/colorPrimary"
                       android:layout_height="wrap_content">
                       <Spinner
                           android:id="@+id/spnn_product"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:layout_weight="2"
                           android:popupBackground="#d19400"
                           android:overlapAnchor="true">

                       </Spinner>

                   </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_addproductType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/black"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_productFromItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_plus" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Item Name :"
                            android:textSize="16sp"

                            android:textColor="@color/color_grey"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_productName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="textCapWords"
                            android:textColor="@color/color_grey" />

                    </android.support.design.widget.TextInputLayout>




                </LinearLayout>


                <!-- Brand name Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:hint="HSN CODE :"
                            android:textSize="16sp"
                            android:textColor="@color/color_grey"
                            android:layout_height="wrap_content" />


                    </LinearLayout>






                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_hsn_san_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="number"
                            android:textColor="@color/color_grey" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:hint="BarCode  :"
                            android:textSize="16sp"
                            android:textColor="@color/color_grey"
                            android:layout_height="wrap_content" />


                    </LinearLayout>






                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_itemBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottomline"
                            android:inputType="number"
                            android:textColor="@color/color_grey" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


