<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view__user__deatil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/black"
    tools:context="com.inevitablesol.www.shopmanagement.account.View_User_Deatil">

    <include layout="@layout/view_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/rectangleshape"
        android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:textColor="@color/color_grey"
               android:text="@string/UserDetaails"
               android:layout_gravity="center"
               android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="100dp"
            android:id="@+id/user_pic"
            android:layout_gravity="end"
            android:background="@color/color_grey"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/UserType"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText

                    android:id="@+id/et_userType"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Name :"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:id="@+id/u_name"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
              </android.support.design.widget.TextInputLayout>





    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Mobile :"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:id="@+id/textView35" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/u_mobile"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>





</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Email :"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                 />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/u_email"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Employee Code :"
                android:enabled="false"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/u_code"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>





        </LinearLayout>

        <include layout="@layout/view_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/CreatedOn"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                     android:id="@+id/u_createdOn"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>



  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/CreatedBy"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/u_creatdby"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>

  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/u_call"
                android:layout_weight="1"
                android:src="@drawable/ic_phone"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/u_sms"
                android:layout_weight="1"
                android:src="@drawable/ic_action_sms"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/u_mail"
                android:src="@drawable/ic_action_mail"
                android:layout_height="wrap_content" />


        </LinearLayout>


        </LinearLayout>
</LinearLayout>
