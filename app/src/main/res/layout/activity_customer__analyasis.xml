<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/TimePeriod"
            android:id="@+id/testId"
            android:textSize="18sp"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rectangleshape"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/cust_report_analysis"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Week"
                    android:id="@+id/analysis_week"
                    style="@style/RadioButton"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/PleaseSelectDate"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_width="wrap_content"
                                android:text="@string/From"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/txt_fromdate"
                                android:layout_width="100dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/img_weekFromdate"
                                android:layout_width="wrap_content"
                                android:fitsSystemWindows="true"
                                android:background="@drawable/ic_date_range"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/To"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView31" />

                            <TextView
                                android:id="@+id/txt_todate"
                                android:layout_width="100dp"

                                android:layout_marginLeft="10dp"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:fitsSystemWindows="true"
                                android:visibility="invisible"
                                android:background="@drawable/ic_date_range"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    <include layout="@layout/view_line"></include>





                </LinearLayout>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Month"
                    android:id="@+id/analysis_Month"
                    style="@style/RadioButton"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/PleaseSelectMonth"
                    android:layout_height="wrap_content" />








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Month"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="100dp"

                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/month_img"
                        android:layout_width="wrap_content"
                        android:fitsSystemWindows="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_date_range"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:text="Year"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:textColor="@color/color_grey"-->
                        <!--android:layout_height="wrap_content" />-->

                    <!--<TextView-->
                        <!--android:layout_width="100dp"-->
                        <!--android:text="@string/Date"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:textColor="@color/color_grey"-->
                        <!--android:layout_height="wrap_content" />-->
                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:fitsSystemWindows="true"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:background="@drawable/ic_date_range"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_height="wrap_content" />-->


                <!--</LinearLayout>-->

                <View
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="1dp"></View>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="YEAR"
                    android:id="@+id/analysis_year"
                    style="@style/RadioButton"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/PleaseSelectYEAR"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Year"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/year_analysis"
                        android:layout_width="100dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/year_ic"
                        android:layout_width="wrap_content"
                        android:fitsSystemWindows="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_date_range"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_height="1dp"></View>

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:text="@string/ViewAnalysis"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:id="@+id/customer_viewanalysis"
                    android:background="@color/colorPrimary"
                    android:layout_height="30dp" />


            </LinearLayout>

            <include  layout="@layout/view_line" ></include>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
