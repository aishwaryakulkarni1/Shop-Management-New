<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/rectangleshape"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Item Details "
                android:textSize="18sp"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Type :"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Name  :"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="HSN CODE:"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/ITEMBARCODE"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:text="Product Company :"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Specification :"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Type :"
                    android:id="@+id/edit_menu_productType"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Name  :"
                    android:id="@+id/edit_menu_productName"

                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="HSN/SAC:"
                    android:id="@+id/edit_menu_productHSN"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_itembarcode"
                    android:text=" :"
                    android:visibility="gone"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Product Company :"
                    android:visibility="gone"
                    android:id="@+id/edit_menu_productCompany"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/edit_menu_productSpecification"
                    android:text="Product Specification :"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/Unit_Price"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Discount \n  in % "
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Discount \n in Rs"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Dicounted \n Price"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edit_menuUnit"
                android:text="Storage Qty"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edit_menuDiscout_per"
                android:text="Original Price"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edit_menuDicountRs"
                android:text="@string/Mrp"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="GST %"
                android:id="@+id/edit_menu_DicountedPr"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/MeasurementUnit"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/Unit"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_munit"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_grey"
                    android:text=""
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_unit"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_grey"
                    android:text=""
                    android:layout_height="wrap_content" />

            </LinearLayout>






        </LinearLayout>

        <include layout="@layout/view_line"></include>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Current GST % :"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                     <TextView
                         android:layout_width="0dp"
                         android:textColor="@color/color_grey"
                         android:id="@+id/txt_currentGstPercent"
                         android:layout_weight="2"
                         android:layout_height="wrap_content" />


            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Current price:"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_menu_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="@string/Unit_Price"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_menu_unitPrice"
                        android:inputType="numberDecimal"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="Discount in %"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/edit_menu_dis_ps"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="Discount in Rs"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_menu_discount"
                        android:inputType="numberDecimal"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"
                android:id="@+id/view"></View>





            <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/DiscountedPrice"
                android:textColor="@color/green"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_menu_discountedPrice"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"

                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:textSize="16sp"
                        android:textColor="@color/color_grey"
                        android:letterSpacing="0.05"
                        android:text="GST % :"
                        />

                </LinearLayout>






                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/et_gstpercentage_menu"
                        android:overlapAnchor="true"
                        android:entries="@array/gst_tax_array"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Price"
                    android:textColor="@color/green" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_menu_totalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottomline"
                        android:hint=""
                        android:inputType="numberDecimal"
                        android:textColor="@color/color_grey" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/edit_menuItem"
            android:layout_margin="10dp"

            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Save Details"
            android:layout_gravity="center"
            android:layout_height="35dp" />








    </LinearLayout>

    </ScrollView>


</LinearLayout>