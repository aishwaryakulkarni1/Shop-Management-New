<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more__about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/black"
     android:orientation="vertical"
    tools:context="com.inevitablesol.www.shopmanagement.more.More_AboutUS">

    <include layout="@layout/view_line"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/Mission"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
             android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/misssionString"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="@string/sayno"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/cashlessheading"
            android:layout_height="wrap_content" />

           <!--<TextView-->
               <!--android:layout_width="wrap_content"-->
               <!--android:text="Pay from any Were"-->
               <!--android:textColor="@color/white"-->
               <!--android:layout_height="wrap_content" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/hour_logo"
            android:layout_height="wrap_content" />






        <TextView
            android:layout_width="wrap_content"
            android:text="Powered By"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" />

          <ImageView
              android:layout_width="wrap_content"
              android:src="@drawable/logo"
              android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/m_label"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <include layout="@layout/view_line"></include>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/About"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" />


              <ImageView
                  android:layout_width="match_parent"
                  android:src="@drawable/m_label"
                  android:layout_height="20dp" />

                 <WebView
                     android:layout_width="match_parent"
                     android:id="@+id/about_text"
                     android:background="@color/black"
                     android:textColor="@color/color_grey"
                     android:layout_height="wrap_content" />
    </LinearLayout>
            </ScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"></View>
            <include layout="@layout/contact"></include>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>


