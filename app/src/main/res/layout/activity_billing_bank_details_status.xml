<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_billing_bank_details_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.inevitablesol.www.shopmanagement.billing_module.Billing_bankDetailsStatus">


    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/rectangleshape"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Account Detail"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_margin="15dp"
         android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:textColor="@color/colorPrimary"
             android:text="@string/BankName"
             android:layout_height="wrap_content" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_marginLeft="20dp"
             android:text="@string/BankName"
             android:id="@+id/bank_name"
             android:textColor="@color/color_grey"
             android:layout_height="wrap_content" />

     </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/AccountHolderName"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Account"
                android:id="@+id/account_holderName"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/AccountNumber"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Account"
                android:layout_marginLeft="20dp"
                android:id="@+id/account_number"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/IfcNumber"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/IfcNumber"
            android:id="@+id/account_ifcnumber"
            android:textColor="@color/color_grey"
            android:layout_height="wrap_content" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/Remark"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Remark"
                android:layout_marginLeft="20dp"
                android:id="@+id/remark_forBillPayment"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/color_grey"
            android:text="@string/PaymentStatus"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:layout_height="1dp">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:text="Transaction No:"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_transactionId_bankDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:background="@drawable/bottomline"
                    android:textColor="@color/color_grey"
                    android:hint="" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:textColor="@color/white"
                android:id="@+id/bank_detailsPaymentDone"
                android:background="@color/colorPrimary"
                android:text="Done"
                android:layout_height="30dp" />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>
