<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rectangleshape"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Item Details "
                    android:textSize="18sp"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Type :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Name  :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/ITEMBARCODE"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="HSN/SAC:"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Company :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Specification :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/MeasurementUnit"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Type :"
                        android:id="@+id/add_new_productType"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Name  :"
                        android:id="@+id/add_new_productName"

                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/ITEMBARCODE"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="HSN/SAC:"
                        android:id="@+id/add_new_productHSN"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Product Company :"
                        android:id="@+id/add_new_productCompany"

                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/add_new_productSpecification"
                        android:text="Product Specification :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/MeasurementUnit"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_grey"
                android:text="Purchase Details"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="Storage \n Qty"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Original\n Price"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="MRP"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="GST %"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/add_newStorageQty"
                    android:text="Storage Qty"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/add_newOriginalPrice"
                    android:text="Original Price"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/add_newMrp"
                    android:text="@string/Mrp"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="GST %"
                    android:id="@+id/add_new_gst"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Add To Stock:"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_add_stock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@drawable/bottomline"
                            android:textColor="@color/color_grey"
                            android:hint="" />
                    </android.support.design.widget.TextInputLayout>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:text="@string/Unit_Price"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_s_unitprice"
                            android:inputType="numberDecimal"
                            android:background="@drawable/bottomline"
                            android:textColor="@color/color_grey"
                            android:hint="" />
                    </android.support.design.widget.TextInputLayout>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:textColor="@color/color_grey"
                        android:letterSpacing="0.05"
                        android:text="@string/Unit"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">


                        <Spinner
                            android:layout_width="match_parent"
                            android:overlapAnchor="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:id="@+id/linear_discountper"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:text="Discount in % :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/et_discountPer"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@drawable/bottomline"
                            android:textColor="@color/color_grey"
                            android:hint="" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"

                    android:gravity="bottom"
                    android:id="@+id/linear_discount"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="Discount in Rs :"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@drawable/bottomline"
                            android:textColor="@color/color_grey"
                            android:hint=""
                            android:id="@+id/et_discount" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>









            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp">

            </View>







            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:text="@string/DiscountedPrice"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/et_totalDiscountedPrice"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text="GST % :"
                    />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/et_gstpercentage"
                        android:overlapAnchor="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:text="Price :"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/et_totalPrice"
                        android:background="@drawable/bottomline"
                        android:textColor="@color/color_grey"
                        android:hint="" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>




            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:text="Add To Item List"
                android:id="@+id/btn_add_to_items"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>