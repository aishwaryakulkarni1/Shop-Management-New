<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/rectangleshape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mustardbrown">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text=" Name"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/txt_ServiceName"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text=""
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text="ID"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/txt_ServiceID"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text=""
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text="Amount"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/txt_ServiceAmount"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text=""
                    />




            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text="Duration "
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/txt_ServiceDuration"
                    android:textColor="@color/color_grey"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_grey"
                    android:letterSpacing="0.05"
                    android:text="Due "
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/txt_view_Due"
                    android:textColor="@color/color_grey"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:text="Remove"
                    android:id="@+id/bt_service_removeService"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
