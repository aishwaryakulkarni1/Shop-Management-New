<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_customer_week_analysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.inevitablesol.www.shopmanagement.analysis.Customer_weekAnalysis">

    <include layout="@layout/view_line"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Year"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/Date"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rectangleshape"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/TotalAnalysis"
                    android:layout_gravity="center"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <include layout="@layout/view_line"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <com.jjoe64.graphview.GraphView
                        android:layout_width="wrap_content"
                        app:seriesType="bar"
                        android:layout_height="match_parent"
                        android:id="@+id/graph" />

                </LinearLayout>


                <include  layout="@layout/view_line">
                </include>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/color_grey"
                    android:text="Analysis Summary"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32" />

                <include layout="@layout/view_line"></include>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:text="Total"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:textColor="@color/color_grey"-->
                    <!--android:layout_height="wrap_content" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Sales"
                            android:textColor="@color/green"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Purchase"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Expense"
                            android:textColor="@color/red"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="₹"
                                android:layout_gravity="bottom"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Sale"
                                android:id="@+id/txt_sale"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <TextView
                             android:layout_width="wrap_content"
                             android:text="₹"
                             android:layout_gravity="bottom"
                             android:textColor="@color/color_grey"
                             android:layout_height="wrap_content" />
                         <TextView
                             android:layout_width="wrap_content"
                             android:text="Purchase"
                             android:id="@+id/txt_purchase"
                             android:textColor="@color/color_grey"
                             android:layout_height="wrap_content" />


                     </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="₹"
                                android:layout_gravity="bottom"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Expense"
                                android:id="@+id/txt_expense"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                        </LinearLayout>



                    </LinearLayout>




                </LinearLayout>
                <include layout="@layout/view_line">

                </include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/green"
                            android:text="@string/HightSalingMonth"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/HightPurchaseMonth"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/red"
                            android:text="@string/HightExpenseMonth"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_grey"
                            android:text="Day"
                            android:id="@+id/saleDay"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/color_grey"
                            android:text="Day"
                            android:id="@+id/purchaseDay"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/color_grey"
                            android:text="Day"
                            android:id="@+id/expday"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="₹"
                                android:layout_gravity="bottom"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/saleAmount"
                                android:layout_width="wrap_content"
                                android:textColor="@color/color_grey"
                                android:text="@string/Amount"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="₹"
                                android:layout_gravity="bottom"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/purchaseAmount"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/color_grey"
                                android:text="@string/Amount"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="₹"
                                android:layout_gravity="bottom"
                                android:textColor="@color/color_grey"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/expamount"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/color_grey"
                                android:text="@string/Amount"
                                android:layout_height="wrap_content" />


                        </LinearLayout>





                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
