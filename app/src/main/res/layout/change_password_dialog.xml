<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:background="@drawable/rectangleshape"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Change Password"
        android:textSize="24sp"
        android:id="@+id/textView6" />
    <include layout="@layout/view_line"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="Sweet! OTP verified.\n Change your password below.\nTry not to forget it this time."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:layout_marginTop="8dp">

        <TextView
            android:textSize="20sp"
            android:textColor="@color/cool_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "/>

        <TextView
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/user_number"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <!-- New Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <android.support.v7.widget.AppCompatEditText android:id="@+id/input_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cool_grey"
                android:textColorHint="@color/color_grey"
                android:background="@drawable/bottomline"
                android:inputType="textPassword"
                android:gravity="center"
                android:hint="Enter new Password" />
        </android.support.design.widget.TextInputLayout>


        <!-- Retype Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <android.support.v7.widget.AppCompatEditText android:id="@+id/input_repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/cool_grey"
                android:textColorHint="@color/color_grey"
                android:background="@drawable/bottomline"
                android:gravity="center"
                android:hint="Retype Password" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:gravity="end"
           android:layout_height="wrap_content">

           <android.support.v7.widget.AppCompatButton
               android:id="@+id/update_pass"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:textAllCaps="false"
               android:backgroundTint="@color/colorPrimary"
               android:textColor="@color/white"
               android:text="Update Password"
               android:textSize="12sp"
               />

           <android.support.v7.widget.AppCompatButton
               android:id="@+id/cancel_pass"
               android:layout_marginLeft="10dp"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:text="CANCEL"
               android:textColor="@color/colorPrimaryDark"/>

       </LinearLayout>
    <include layout="@layout/view_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/formoreQuariy"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/blue"
                android:gravity="center"
                android:id="@id/phoneNumber"
                android:textSize="20sp"
                android:text="@string/phoneNumber"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>