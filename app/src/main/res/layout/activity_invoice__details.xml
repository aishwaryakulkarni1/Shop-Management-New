        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>

        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Custmessage"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <include layout="@layout/view_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/inv_call"
                android:layout_weight="1"
                android:src="@drawable/ic_phone"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:id="@+id/inv_sms"
                android:layout_weight="1"
                android:src="@drawable/ic_action_sms"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/inv_mail"
                android:src="@drawable/ic_action_mail"
                android:layout_height="wrap_content" />
            </LinearLayout>


    </LinearLayout>




