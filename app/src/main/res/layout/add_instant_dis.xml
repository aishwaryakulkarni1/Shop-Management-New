<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rectangleshape"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/color_grey"
            android:text="Add Instant Discount"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
             android:layout_width="wrap_content"
             android:orientation="vertical"
             android:gravity="end"
             android:layout_height="wrap_content">


             <TextView
                 android:layout_width="wrap_content"
                 android:text="Item Name:"
                 android:textColor="@color/colorPrimary"
                 android:layout_height="wrap_content" />


             <TextView
                 android:layout_width="wrap_content"
                 android:text="Unit Price :"
                 android:textColor="@color/colorPrimary"
                 android:layout_height="wrap_content" />

             <TextView
                 android:layout_width="wrap_content"
                 android:textColor="@color/colorPrimary"
                 android:text="@string/DiscountInRs"
                 android:layout_height="wrap_content" />


             <TextView

                 android:layout_width="wrap_content"
                 android:textColor="@color/colorPrimary"
                 android:text="@string/DiscountedPrice"
                 android:layout_height="wrap_content" />

             <TextView

                 android:layout_width="wrap_content"
                 android:textColor="@color/colorPrimary"
                 android:text="@string/Unit"
                 android:layout_height="wrap_content" />

         </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:orientation="vertical"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:id="@+id/dis_itemName"
                 android:text="@string/Item_Name"
                 android:textColor="@color/color_grey"
                 android:layout_height="wrap_content" />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:text="@string/Unit_Price"
                 android:id="@+id/unitPrice"
                 android:textColor="@color/color_grey"
                 android:layout_height="wrap_content" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:text="@string/Unit_Price"
                 android:id="@+id/dis_inRepees"
                 android:textColor="@color/color_grey"
                 android:layout_height="wrap_content" />


             <TextView

                 android:layout_marginLeft="20dp"
                 android:layout_width="wrap_content"
                 android:text="@string/Unit_Price"
                 android:id="@+id/discoutedPrice"
                 android:textColor="@color/color_grey"
                 android:layout_height="wrap_content" />

             <TextView
                 android:layout_marginLeft="20dp"
                 android:layout_width="wrap_content"
                 android:text="@string/MeasurementUnit"
                 android:id="@+id/txt_measurmentUnit"
                 android:textColor="@color/color_grey"
                 android:layout_height="wrap_content" />



         </LinearLayout>

     </LinearLayout>

      <include layout="@layout/view_line"></include>

      <TextView
          android:layout_width="match_parent"
          android:gravity="center"
          android:textColor="@color/green"
          android:text="@string/AddDiscountHere"
          android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Unit Price :"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:text="@string/DiscountInRs"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:text="@string/DiscountedPrice"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/TotalQty"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/ChangeUnit"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/green"
                android:text="@string/TotalAmount"
                android:layout_height="wrap_content" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
             android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Unit_Price"
                android:id="@+id/dis_unitPricenew"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:text="₹"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:textColor="@color/color_grey"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/instant_discount"
                android:inputType="number"
                android:maxEms="7"
                android:textColor="@color/color_grey"
                android:background="@drawable/bottomline"
                android:layout_height="wrap_content" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="₹"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/discounted_price"
                    android:textColor="@color/color_grey"

                    android:layout_height="wrap_content" />

            </LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_totalQty"
                    android:maxEms="4"
                    android:inputType="numberSigned"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/changedUnit"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="₹"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/total_amount"
                    android:inputType="numberSigned"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>



        </LinearLayout>

    <include layout="@layout/view_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="cancel"
            android:id="@+id/dis_cancel"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="Add Discount"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:id="@+id/add_discount"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_height="40dp" />


    </LinearLayout>
    <include layout="@layout/view_line"></include>


    </LinearLayout>

