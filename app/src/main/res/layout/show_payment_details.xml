<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/rectangleshape"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Payment Details"
            android:layout_height="wrap_content" />

        <include layout="@layout/view_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/colorPrimary"
                android:text="Date"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="Total"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="Paid"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="Balance"
                android:layout_height="wrap_content" />





        </LinearLayout>

        <include layout="@layout/view_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:text="@string/Date"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtotal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Total"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txpaid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Paid"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txbalance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Balance"
                android:layout_height="wrap_content" />




        </LinearLayout>

        <include layout="@layout/view_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="@string/PaymentMode"
                      android:textColor="@color/colorPrimary"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:id="@+id/paymentMode"
                      android:layout_width="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:text="@string/PaymentMode"
                      android:textColor="@color/white"
                      android:layout_height="wrap_content" />

              </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/Tran_ref"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/transaction_ref"
                    android:layout_width="wrap_content"
                   android:layout_marginLeft="5dp"
                    android:text="@string/PaymentMode"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>