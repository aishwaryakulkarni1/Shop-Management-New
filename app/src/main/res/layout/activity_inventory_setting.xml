<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_app_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.inevitablesol.www.shopmanagement.settings.CustomAppTheme">

    <include layout="@layout/view_line"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.01"
                    android:letterSpacing="0.05"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Enable GST"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/rg_gst"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:text="Yes"
                        android:textSize="14dp"
                        style="@style/RadioButton"
                        android:id="@+id/rb_gst_yes"
                        android:textColor="@color/color_grey"
                        android:checked="true"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"

                        style="@style/RadioButton"
                        android:backgroundTint="@color/mustardbrown"
                        android:textColor="@color/color_grey"
                        android:text="No"
                        android:id="@+id/rb_gst_no"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </RadioGroup>


            </LinearLayout>






        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="1dp"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.01"
                    android:letterSpacing="0.05"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Enable Discount"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/rg_discount"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:text="Yes"
                        android:textSize="14dp"
                        style="@style/RadioButton"
                        android:textColor="@color/color_grey"
                        android:checked="true"
                        android:id="@+id/rb_discount_yes"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"

                        style="@style/RadioButton"
                        android:backgroundTint="@color/mustardbrown"
                        android:textColor="@color/color_grey"
                        android:text="No"
                        android:id="@+id/rb_discount_no"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </RadioGroup>


            </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linear_quotation"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.01"
                        android:letterSpacing="0.05"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:text="Enable Quotation Options"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"
                        />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/rg_quotation"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:text="Yes"
                            android:textSize="14dp"
                            style="@style/RadioButton"
                            android:id="@+id/rb_quotation_yes"
                            android:textColor="@color/color_grey"
                            android:checked="true"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"

                            style="@style/RadioButton"
                            android:id="@+id/rb_quotation_no"
                            android:backgroundTint="@color/mustardbrown"
                            android:textColor="@color/color_grey"
                            android:text="No"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.01"
                        android:letterSpacing="0.05"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:text="Enable Menu Item "
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"
                        />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:id="@+id/rb_menuItem"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:text="Yes"
                            android:id="@+id/rb_menuItem_yes"
                            android:textSize="14dp"
                            style="@style/RadioButton"
                            android:textColor="@color/color_grey"
                            android:checked="true"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/rb_menuItem_no"
                            style="@style/RadioButton"
                            android:backgroundTint="@color/mustardbrown"
                            android:textColor="@color/color_grey"
                            android:text="No"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.01"
                        android:letterSpacing="0.05"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:text="Enable Passcode"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"
                        />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/rg_passCode"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:text="Yes"
                            android:textSize="14dp"
                            android:id="@+id/rb_passCodeYes"
                            style="@style/RadioButton"
                            android:textColor="@color/color_grey"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            style="@style/RadioButton"
                            android:backgroundTint="@color/mustardbrown"
                            android:textColor="@color/color_grey"
                            android:text="No"
                            android:checked="true"
                            android:id="@+id/rb_passCodeNo"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.01"
                    android:letterSpacing="0.05"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:text="Enable Item Unit"
                    android:textColor="@color/color_grey"
                    android:layout_height="wrap_content"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/rg_unit_price"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:text="Yes"
                        android:textSize="14dp"
                        style="@style/RadioButton"
                        android:id="@+id/rb_unit_price_yes"
                        android:textColor="@color/color_grey"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        style="@style/RadioButton"
                        android:backgroundTint="@color/mustardbrown"
                        android:textColor="@color/color_grey"
                        android:id="@+id/rb_unit_price_no"
                        android:text="No"
                        android:checked="true"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </RadioGroup>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.01"
                        android:letterSpacing="0.05"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:text="Your Passcode"
                        android:textColor="@color/color_grey"
                        android:layout_height="wrap_content"
                        />

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_marginLeft="10dp"
                              android:textColor="@color/color_grey"
                              android:id="@+id/passcode_show"
                              android:layout_height="wrap_content" />
                        <!--<android.support.design.widget.TextInputLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_marginLeft="20dp"-->
                            <!--android:layout_height="wrap_content">-->

                            <!--<android.support.design.widget.TextInputEditText-->
                                <!--android:layout_width="100dp"-->
                                <!--android:id="@+id/passcode_show"-->
                                <!--android:textColor="@color/white"-->
                                <!--android:maxEms="6"-->
                                <!--android:hint="Pass Code"-->
                                <!--android:layout_height="wrap_content" />-->

                        <!--</android.support.design.widget.TextInputLayout>-->



                </LinearLayout>


            </LinearLayout>





            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="1dp"></View>




        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp"></View>


</LinearLayout>