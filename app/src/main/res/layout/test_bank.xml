                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/rectangleshape"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
